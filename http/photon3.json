{
    "hostname": "photon3",
    "password":
        {
            "crypted": false,
            "text": "VMware1!"
        },
    "disk": "/dev/sda",
    "partitions": [
                        {"mountpoint": "/", "size": 0, "filesystem": "ext4"},
                        {"mountpoint": "/boot", "size": 128, "filesystem": "ext4"},
                        {"mountpoint": "/root", "size": 128, "filesystem": "ext4"},
                        {"size": 128, "filesystem": "swap"}
                    ],
    "packagelist_file": "packages_minimal.json",
    "additional_packages": ["vim"],
    "postinstall": [
                        "#!/bin/sh",
                        "useradd -m -G sudo v12n",
                        "echo \"v12n:VMware1!\" | chpasswd",
                        "echo \"v12n  ALL=(ALL)  NOPASSWD:SETENV: ALL\" >> /etc/sudoers.d/v12n",
                        "sed -i \"s/^.*requiretty/#Defaults requiretty/\" /etc/sudoers",
                        "iptables -A INPUT -p ICMP -j ACCEPT",
                        "iptables -A INPUT -p ICMP -j ACCEPT",
                        "iptables-save > /etc/systemd/scripts/ip4save"
                   ],
    "install_linux_esx": false,
    "network": {
        "type": "dhcp"
    }    
}